# Service Platform - Environment Variables
# Copy this file to .env and update values

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql://service_user:service_password@localhost:5432/service_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=service_user
DATABASE_PASSWORD=service_password
DATABASE_NAME=service_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Meilisearch
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_KEY=meilisearch_master_key

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key
MINIO_BUCKET_AVATARS=avatars
MINIO_BUCKET_POSTS=posts
MINIO_BUCKET_VIDEOS=videos
MINIO_BUCKET_PORTFOLIOS=portfolios

# Email (MailHog for development, SMTP for production)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@service-platform.com

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OAuth (Google)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# OAuth (Apple)
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=./certs/apple_private_key.p8

# Google Calendar API (v1.0 feature)
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=

# Google Translate API (v1.0 feature)
GOOGLE_TRANSLATE_API_KEY=

# Firebase Cloud Messaging (Push Notifications)
FCM_PROJECT_ID=your_firebase_project_id
FCM_PRIVATE_KEY=your_firebase_private_key
FCM_CLIENT_EMAIL=your_firebase_client_email

# Payment Gateway (v1.0 feature)
# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# or PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
# or Yookassa (for Russian market)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# KYC Provider (v1.0 feature)
# Sumsub
SUMSUB_APP_TOKEN=
SUMSUB_SECRET_KEY=
# or Onfido
ONFIDO_API_TOKEN=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:8080

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Sentry (Error Tracking - optional)
SENTRY_DSN=

# App URLs
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:3000
