# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v2
HOST=0.0.0.0

# Database (Docker service names)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=service_user
DB_PASSWORD=service_password
DB_DATABASE=service_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis (Docker service name)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# MinIO / S3 (Docker service name)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key
MINIO_BUCKET=posts
MINIO_USE_SSL=false

# Meilisearch (Docker service name)
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_API_KEY=meilisearch_master_key

# Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4

# CORS (разрешаем все для dev)
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# SMTP / Email (MailHog Docker service)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_FROM_EMAIL=noreply@serviceplatform.com
SMTP_FROM_NAME=Service Platform

# MinIO Public URL (for browser access - use localhost even in Docker)
MINIO_PUBLIC_URL=http://localhost:9000
