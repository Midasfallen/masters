# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v2

# Database (подключение к Docker-сервису PostgreSQL извне)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=service_user
DB_PASSWORD=service_password
DB_DATABASE=service_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis (подключение к Docker-сервису Redis извне)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# MinIO / S3 (подключение к Docker-сервису MinIO извне)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key
MINIO_BUCKET=posts
MINIO_USE_SSL=false

# Meilisearch (подключение к Docker-сервису Meilisearch извне)
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=meilisearch_master_key

# SMTP / Email (подключение к Docker-сервису MailHog извне)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_FROM_EMAIL=noreply@serviceplatform.com
SMTP_FROM_NAME=Service Platform

# Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:8080

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
