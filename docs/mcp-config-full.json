{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your_github_token_here"
      }
    },
    "git": {
      "command": "node",
      "args": [
        "C:\\masters\\masters\\scripts\\mcp-git-server.js"
      ],
      "env": {
        "GIT_WORKSPACE": "C:\\masters\\masters"
      }
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_STORAGE_PATH": "C:\\masters\\masters\\.cursor\\memory"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "playwright",
        "install",
        "chromium"
      ]
    },
    "docker": {
      "command": "node",
      "args": [
        "C:\\masters\\masters\\scripts\\mcp-docker-server.js"
      ],
      "env": {}
    },
    "redis": {
      "command": "node",
      "args": [
        "C:\\masters\\masters\\scripts\\mcp-redis-server.js"
      ],
      "env": {
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "REDIS_PASSWORD": "redis_password"
      }
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres"
      ],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://service_user:service_password@localhost:5433/service_db"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ],
      "env": {
        "ALLOWED_DIRECTORIES": "C:\\masters\\masters"
      }
    }
  }
}
